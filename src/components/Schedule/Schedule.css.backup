/* Schedule Component Styles */
.schedule {
  animation: fadeIn 0.3s ease;
  width: 100%;
  max-width: 1400px;
  margin: 0;
  padding: 0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
}

/* Demo Banner */
.demo-banner {
  background: linear-gradient(135deg, var(--accent-gold) 0%, var(--accent-terra) 100%);
  border-radius: var(--radius-lg);
  padding: 16px 24px;
  margin-bottom: 24px;
  box-shadow: var(--shadow);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.demo-content {
  display: flex;
  align-items: center;
  gap: 16px;
  color: white;
}

.demo-icon {
  font-size: 24px;
  flex-shrink: 0;
}

.demo-text strong {
  font-size: 16px;
  font-weight: 700;
  display: block;
  margin-bottom: 4px;
}

.demo-text p {
  font-size: 14px;
  margin: 0;
  opacity: 0.9;
}

/* Header */
.schedule-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32px;
  padding: 28px 32px;
  background: linear-gradient(135deg, var(--white) 0%, var(--beige-light) 100%);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  border: 1px solid var(--gray-100);
  animation: slideIn 0.4s ease;
}

.schedule-title-section h1 {
  font-size: 2.25rem;
  font-weight: 700;
  color: var(--sage-dark);
  margin: 0;
  letter-spacing: -0.025em;
}

.schedule-title-section p {
  color: var(--gray-600);
  margin: 6px 0 0 0;
  font-size: 1rem;
  font-weight: 500;
}

.schedule-actions {
  display: flex;
  gap: 12px;
}

/* Buttons */
.btn {
  padding: 12px 20px;
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: all var(--transition-base);
  font-size: 0.9rem;
  border: 1px solid transparent;
}

.btn-primary {
  background: var(--sage-green);
  color: white;
  box-shadow: var(--shadow);
}

.btn-primary:hover {
  background: var(--sage-dark);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.btn-secondary {
  background: var(--white);
  color: var(--gray-700);
  border: 1px solid var(--gray-200);
}

.btn-secondary:hover {
  background: var(--gray-50);
  border-color: var(--gray-300);
  transform: translateY(-1px);
  box-shadow: var(--shadow);
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 24px;
  margin-bottom: 32px;
}

.stat-card {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: 24px;
  box-shadow: var(--shadow);
  border: 1px solid var(--gray-100);
  transition: all var(--transition-base);
  position: relative;
  overflow: hidden;
  animation: scaleIn 0.5s ease forwards;
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--sage-green);
  opacity: 0;
  transition: opacity var(--transition-fast);
}

.stat-card:hover::before {
  opacity: 1;
}

.stat-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16px;
}

.stat-icon {
  width: 48px;
  height: 48px;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
}

.stat-trend {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 4px 8px;
  border-radius: var(--radius-sm);
  font-size: 12px;
  font-weight: 600;
}

.stat-trend.up {
  background: var(--success);
  color: var(--white);
}

.stat-trend.down {
  background: var(--danger);
  color: var(--white);
}

.stat-value {
  font-size: 32px;
  font-weight: 700;
  color: var(--gray-800);
  margin-bottom: 4px;
}

.stat-title {
  font-size: 14px;
  color: var(--gray-500);
  margin-bottom: 8px;
  font-weight: 500;
}

.stat-change {
  font-size: 13px;
  color: var(--gray-600);
}

/* Week Navigation */
.week-navigation {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24px;
  margin-bottom: 32px;
  padding: 24px;
  background: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow);
  border: 1px solid var(--gray-100);
  animation: scaleIn 0.5s ease;
}

.nav-button {
  background: var(--sage-green);
  color: white;
  border: none;
  border-radius: var(--radius-full);
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all var(--transition-base);
  box-shadow: var(--shadow);
}

.nav-button:hover {
  background: var(--sage-dark);
  transform: scale(1.05);
  box-shadow: var(--shadow-lg);
}

.week-info {
  text-align: center;
}

.week-info h2 {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--sage-dark);
  margin: 0 0 12px 0;
  letter-spacing: -0.025em;
}

.today-button {
  background: var(--accent-mint);
  color: var(--sage-dark);
  border: none;
  border-radius: var(--radius-md);
  padding: 10px 18px;
  font-size: 0.85rem;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-sm);
}

.today-button:hover {
  background: var(--accent-terra);
  color: white;
  transform: translateY(-2px);
  box-shadow: var(--shadow);
}

/* Calendar Grid */
.calendar-container {
  background: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  border: 1px solid var(--gray-100);
  animation: fadeIn 0.6s ease;
}

.calendar-grid {
  display: flex;
  flex-direction: column;
}

.calendar-header {
  display: grid;
  grid-template-columns: 100px repeat(7, 1fr);
  background: linear-gradient(135deg, var(--sage-light) 0%, var(--sage-green) 100%);
  border-bottom: 2px solid var(--sage-green);
}

.time-header {
  padding: 20px 16px;
  font-weight: 600;
  color: white;
  background: var(--sage-dark);
  border-right: 1px solid rgba(255, 255, 255, 0.2);
  text-align: center;
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.day-header {
  padding: 20px 12px;
  text-align: center;
  border-right: 1px solid rgba(255, 255, 255, 0.2);
  transition: all var(--transition-base);
  background: transparent;
  color: white;
}

.day-header:last-child {
  border-right: none;
}

.day-header.today {
  background: var(--accent-gold);
  color: var(--sage-dark);
  font-weight: 700;
  position: relative;
}

.day-header.today::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--accent-terra);
}

.day-label {
  font-weight: 600;
  font-size: 0.95rem;
  margin-bottom: 6px;
}

.day-date {
  font-size: 0.8rem;
  opacity: 0.9;
  font-weight: 500;
}

/* Calendar Body */
.calendar-body {
  max-height: 65vh;
  overflow-y: auto;
  scrollbar-width: thin;
  scrollbar-color: var(--sage-light) transparent;
}

.calendar-body::-webkit-scrollbar {
  width: 8px;
}

.calendar-body::-webkit-scrollbar-track {
  background: transparent;
}

.calendar-body::-webkit-scrollbar-thumb {
  background: var(--sage-light);
  border-radius: var(--radius-full);
  transition: background var(--transition-fast);
}

.calendar-body::-webkit-scrollbar-thumb:hover {
  background: var(--sage-green);
}

.time-row {
  display: grid;
  grid-template-columns: 100px repeat(7, 1fr);
  border-bottom: 1px solid var(--gray-100);
  min-height: 60px;
  transition: background-color var(--transition-fast);
}

.time-row:hover {
  background: var(--beige-light);
}

.time-label {
  padding: 18px 16px;
  background: var(--gray-50);
  border-right: 1px solid var(--gray-200);
  font-size: 0.85rem;
  color: var(--gray-600);
  text-align: center;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time-cell {
  border-right: 1px solid var(--gray-100);
  position: relative;
  cursor: pointer;
  transition: all var(--transition-fast);
  min-height: 60px;
  background: var(--white);
}

.time-cell:last-child {
  border-right: none;
}

.time-cell:hover {
  background: var(--beige-light);
  box-shadow: inset 0 0 0 2px var(--accent-mint);
}

/* Lesson Blocks */
.lessons-container {
  position: relative;
  width: 100%;
  height: 100%;
  pointer-events: none; /* Allow clicks to pass through to children */
}

.lesson-block {
  position: absolute;
  top: 3px;
  border-radius: var(--radius-md);
  padding: 12px 14px;
  color: white;
  cursor: pointer;
  transition: all var(--transition-base);
  box-shadow: var(--shadow);
  z-index: 10;
  border-left: 4px solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10px);
  pointer-events: auto; /* Re-enable clicks for lesson blocks */
}

.lesson-block.multiple-lessons {
  padding: 8px 10px;
  border-left-width: 3px;
  margin-right: 2px;
  border-radius: var(--radius-sm);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  position: relative;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.lesson-block.multiple-lessons::before {
  display: none; /* Disable the white dot indicator */
}

